{
	"name": "vscode-notebook-groups",
	"displayName": "VSCode Notebook Groups",
	"description": "Cell execution groups for VS Code notebooks",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other",
		"Data Science",
		"Notebooks"
	],
	"keywords": ["notebook", "jupyter", "ipynb", "execution"],
	"activationEvents": [
		"onNotebook:*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-notebook-groups.executeGroup1",
				"title": "Execute Group 1",
				"category": "Notebook Run Groups",
				"icon": "$(run)",
				"when": "config.notebookRunGroups.groupCount > 0 && notebookEditorFocused"
			},
			{
				"command": "vscode-notebook-groups.addGroup1",
				"title": "Add Group 1",
				"category": "Notebook Run Groups",
				"icon": "$(sign-in)",
				"when": "config.notebookRunGroups.groupCount > 0 && notebookEditorFocused"
			},
			{
				"command": "vscode-notebook-groups.removeGroup1",
				"title": "Remove Group 1",
				"category": "Notebook Run Groups",
				"icon": "$(sign-out)",
				"when": "config.notebookRunGroups.groupCount > 0 && notebookEditorFocused"
			},
			{
				"command": "vscode-notebook-groups.executeGroup2",
				"title": "Execute Group 2",
				"category": "Notebook Run Groups",
				"icon": "$(run)",
				"when": "config.notebookRunGroups.groupCount > 1 && notebookEditorFocused"
			},
			{
				"command": "vscode-notebook-groups.addGroup2",
				"title": "Add Group 2",
				"category": "Notebook Run Groups",
				"icon": "$(sign-in)",
				"when": "config.notebookRunGroups.groupCount > 1 && notebookEditorFocused"
			},
			{
				"command": "vscode-notebook-groups.removeGroup2",
				"title": "Remove Group 2",
				"category": "Notebook Run Groups",
				"icon": "$(sign-out)",
				"when": "config.notebookRunGroups.groupCount > 1 && notebookEditorFocused"
			}
		],
		"menus": {
			"notebook/toolbar": [
				{
					"command": "vscode-notebook-groups.executeGroup1",
					"group": "navigation/execute@1",
					"when": "config.notebookRunGroups.groupCount > 0"
				},
				{
					"command": "vscode-notebook-groups.executeGroup2",
					"group": "navigation/execute@2",
					"when": "config.notebookRunGroups.groupCount > 1"
				}
			],
			"notebook/cell/title": [
				{
					"command": "vscode-notebook-groups.addGroup1",
					"group": "inline/cell@10",
					"when": "config.notebookRunGroups.groupCount > 0"
				},
				{
					"command": "vscode-notebook-groups.removeGroup1",
					"group": "inline/cell@11",
					"when": "config.notebookRunGroups.groupCount > 0"
				},
				{
					"command": "vscode-notebook-groups.executeGroup1",
					"group": "inline/cell@12",
					"when": "config.notebookRunGroups.groupCount > 0 && config.notebookRunGroups.runIconsOnCell"
				},
				{
					"command": "vscode-notebook-groups.addGroup2",
					"group": "inline/cell@13",
					"when": "config.notebookRunGroups.groupCount > 1"
				},
				{
					"command": "vscode-notebook-groups.removeGroup2",
					"group": "inline/cell@14",
					"when": "config.notebookRunGroups.groupCount > 1"
				},
				{
					"command": "vscode-notebook-groups.executeGroup2",
					"group": "inline/cell@15",
					"when": "config.notebookRunGroups.groupCount > 1 && config.notebookRunGroups.runIconsOnCell"
				}
			]
		},
		"configuration":[
			{
				"type": "object",
				"title": "NotebookRunGroups",
				"properties": {
					"notebookRunGroups.groupCount": {
						"type": "integer",
						"enum": [0, 1, 2, 3],
						"default": 3,
						"description": "Count of run groups to show (0-3)",
						"scope": "machine"
					},
					"notebookRunGroups.runIconsOnCell": {
						"type": "boolean",
						"default": false,
						"description": "Display group run icons on each cell toolbar",
						"scope": "machine"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.17.27",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	}
}
